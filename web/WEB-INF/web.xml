<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>ServletFilter</filter-name>
        <filter-class>ServletFilter.ServletFilter</filter-class>
        <init-param>
            <param-name>avoid-urls</param-name>
            <param-value>index.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>avoid-urls</param-name>
            <param-value>register.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>avoid-urls</param-name>
            <param-value>redirect_error.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ServletFilter</filter-name>
        <url-pattern>/ServletFilter</url-pattern>
    </filter-mapping>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/ErrorHandler</location>
    </error-page>
    <servlet>
        <servlet-name>ServletAccess</servlet-name>
        <servlet-class>servlets.access.ServletAccess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Approvals</servlet-name>
        <servlet-class>servlets.servlet.Approvals</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BaseServlet</servlet-name>
        <servlet-class>servlets.servlet.BaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>servlets.servlet.ChangePassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorHandler</servlet-name>
        <servlet-class>servlets.servlet.ErrorHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetReasonReject</servlet-name>
        <servlet-class>servlets.servlet.GetReasonReject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.servlet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotificationsPusher</servlet-name>
        <servlet-class>servlets.servlet.NotificationsPusher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>servlets.servlet.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAccount</servlet-name>
        <servlet-class>servlets.servlet.UpdateAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadCheckerServlet</servlet-name>
        <servlet-class>servlets.servlet.UploadCheckerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAccess</servlet-name>
        <url-pattern>/ServletAccess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Approvals</servlet-name>
        <url-pattern>/Approvals</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BaseServlet</servlet-name>
        <url-pattern>/BaseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/ChangePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorHandler</servlet-name>
        <url-pattern>/ErrorHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetReasonReject</servlet-name>
        <url-pattern>/GetReasonReject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NotificationsPusher</servlet-name>
        <url-pattern>/NotificationsPusher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAccount</servlet-name>
        <url-pattern>/UpdateAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadCheckerServlet</servlet-name>
        <url-pattern>/UploadCheckerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
